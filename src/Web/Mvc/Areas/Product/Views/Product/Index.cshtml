@model List<ProductViewModel>
@{
      var title = ViewBag.title;
}

<div class="container text-center">

      <h1 class="caption-top">
            @title
      </h1>

      <div class="row px-2">
            @{
                  for (var i = 0; i < 8; i++)
                  {
                        <div class="col col-lg-3 col-md-4 col-sm-6 my-2">
                              <div class="card">
                                    <img src="https://th.bing.com/th/id/OIP.cI500T2A_5F9bu5r8SOHvgHaE6?w=262&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7"
                                          alt="cocacola">
                                    <div class="card-body">
                                          <h6 class="card-title">
                                                @Model[0].Name
                                          </h6>
                                          <p class="card-text">
                                                @Model[0].Description
                                          </p>
                                          <h6>
                                                @Model[0].Price
                                          </h6>
                                          <a href="#" class="btn btn-primary">Buy Now</a>
                                    </div>
                              </div>
                        </div>
                  }
            }
      </div>
</div>