@model List<PropertyViewModel>
@{
      var title = ViewBag.title;
}
<div>
      <partial name="_FilterPartial" model="@ViewBag.typeModel" />
      <div class="container-lg text-center property-container">
            <div class="row">
                  @{
                        foreach (var item in Model)
                        {
                              <div class="col col-xl-3 col-lg-4 col-md-6 col-sm-6 my-2 property__card">
                                    <a asp-action="Detail" asp-controller="property" asp-area="Property" asp-route-id=@item.Id>
                                          <div class="card border-0 ">
                                                <img class="property__card__image" src=@item.Medias[0].Url alt="cocacola ">
                                                <div class="card-body d-flex card__body ">
                                                      <div class="property__card__content">
                                                            <h6 class="card-title card__content__title">
                                                                  @item.Title
                                                            </h6>
                                                            <div class="d-flex">
                                                                  <span>
                                                                        3,190m elevation
                                                                  </span>
                                                                  <span>
                                                                        Dec 7-17
                                                                  </span>
                                                            </div>
                                                            <h6 class="card__content__price">
                                                                  $@item.PricePerNight <span>night</span>
                                                            </h6>
                                                      </div>
                                                      <div class="property__card__rating">
                                                            <span>
                                                                  4.5
                                                            </span>
                                                            <i class="fa-solid fa-star "></i>
                                                      </div>
                                                </div>
                                          </div>
                                    </a>
                              </div>
                        }
                  }
            </div>

      </div>
      <div class="d-flex justify-content-center">
            <partial name="_Paging" model="@ViewBag.pagingModel" />
      </div>
</div>
</div>