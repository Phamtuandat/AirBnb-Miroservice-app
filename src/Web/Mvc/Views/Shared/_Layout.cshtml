<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mvc</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mvc.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="header-top sticky-lg-top">
            <nav class="app_navbar">
                <div class="app_navbar-body container">
                    <div class="d-flex w-100">
                        <div class=" app_navbar--content" id="navbarSupportedContent">
                            <a class="app_navbar-brand" asp-action="index" asp-controller="Home">Kotarent</a>
                            <div class="app_nav-list h-100">
                                <div class="app_nav-item">
                                    <a class="app_nav-link" aria-current="page" asp-action="index"
                                        asp-controller="home">Home</a>
                                </div>
                                <div class="app_nav-item">
                                    <a asp-action="index" asp-area="product" asp-controller="product"
                                        class="app_nav-link">Property</a>
                                </div>
                                <div class="app_nav-item">
                                    <a asp-action="index" asp-area="product" asp-controller="product"
                                        class="app_nav-link">
                                        About
                                    </a>
                                </div>
                                <div class="app_nav-item">
                                    <a asp-action="index" asp-area="product" asp-controller="product"
                                        class="app_nav-link">Blog</a>
                                </div>
                                <div class="app_nav-item">
                                    <a asp-action="index" asp-area="product" asp-controller="product"
                                        class="app_nav-link">Contact</a>
                                </div>
                            </div>
                            <div class="d-flex align-content-center p-2">
                                <button class="btn" type="button">Sign In</button>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="header-bottom">
            @await Html.PartialAsync("_GeopifyPartial")
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
